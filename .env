# PostgreSQL Database Configuration
POSTGRES_DB=spring_digital_bookstore
POSTGRES_USER=nobugs228
POSTGRES_PASSWORD=nobugs228PASSWORD!#

# Spring DataSource Configuration
# For local development use localhost instead of postgres
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/spring_digital_bookstore
SPRING_DATASOURCE_USERNAME=nobugs228
SPRING_DATASOURCE_PASSWORD=nobugs228PASSWORD!#

# JWT Configuration
JWT_SECRET=my-secret-key-for-jwt-generation
JWT_EXPIRATION=300000
JWT_REFRESH_EXPIRATION=86400000

# JPA/Hibernate Configuration
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Swagger/OpenAPI Configuration
SPRINGDOC_API_DOCS_PATH=/v3/api-docs
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html
SPRINGDOC_SWAGGER_UI_OPERATIONS_SORTER=method
SPRINGDOC_SWAGGER_UI_TAGS_SORTER=alpha

# Application Storage Paths
# For local development you can use relative paths
APP_IMAGES_STORAGE_PATH=./storage/pictures
APP_PDF_STORAGE_PATH=./storage/pdf

# JVM Options
JAVA_OPTS=-Xmx512m -Xms256m

# Server Configuration (optional)
# SERVER_PORT=8080

# Logging Configuration (optional)
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_ONLINE_ITYURA_SPRINGDIGITALLIBRARY=DEBUG